{
  "name": "claude-code-status",
  "displayName": "Claude Code Status",
  "description": "Display Claude Code usage and plan status in VS Code status bar",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-status.refresh",
        "title": "Claude Code: Refresh Status"
      },
      {
        "command": "claude-code-status.showDetails",
        "title": "Claude Code: Show Details"
      }
    ],
    "configuration": {
      "title": "Claude Code Status",
      "properties": {
        "claudeCodeStatus.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "How often to refresh status (in seconds)"
        },
        "claudeCodeStatus.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Claude Code status in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^9.29.0",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  }
}
